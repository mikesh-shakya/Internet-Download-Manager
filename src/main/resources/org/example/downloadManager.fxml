<AnchorPane prefHeight="484.0" prefWidth="604.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.DownloadManager">
   <children>
      <BorderPane layoutX="206.0" layoutY="69.0" prefHeight="246.0" prefWidth="324.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Dhondhu Download Manager">
                     <font>
                        <Font name="Andale Mono" size="36.0" />
                     </font>
                     <stroke>
                        <LinearGradient endX="1.0" endY="1.0">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color />
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color red="1.0" green="1.0" blue="1.0" />
                                 </color>
                              </Stop>
                           </stops>
                        </LinearGradient>
                     </stroke>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </Text>
                  <TextField fx:id="URLText" alignment="CENTER" promptText="Enter URL here to downlaod">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#downloadButtonClicked" text="Click to Start Download" textAlignment="CENTER" textFill="#051711">
                     <font>
                        <Font name="Apple SD Gothic Neo Regular" size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </top>
         <center>
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn prefWidth="75.0" text="S.NO." />
                <TableColumn prefWidth="75.0" text="File Name" />
                  <TableColumn prefWidth="75.0" text="File URL" />
                  <TableColumn prefWidth="75.0" text="Status" />
                  <TableColumn prefWidth="75.0" text="\% Completed" />
                  <TableColumn prefWidth="75.0" text="Action" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
